<div class="container">
<h2 class="jumbotron"><span class="glyphicon glyphicon-floppy-save"></span>&nbsp;&nbsp;Crear Comentario</h2>
 
<%=form_for @comentario do |comentario| %>
    <div class="field">
   	 <%= comentario.text_field :name, placeholder: "Name", class:"form-control" %>
    </div>
    <div class="field">
   	 <%= comentario.text_field :star, placeholder: "Star", class:"form-control" %>
    </div>
    <div class="field">
   	 <%= comentario.text_field :main_actor, placeholder: "Main_actor", class:"form-control" %>
    </div>
    <div class="field">
   	 <%= comentario.text_field :year, placeholder: "Year", class:"form-control" %>
    </div>
    <div class="field">
    <%= comentario.submit "Guardar", class:"btn btn-md btn-danger white pull-right" %>
    </div>
    <% end %>
<%= link_to "Back",  comentarios_path, class:"btn btn-md btn-success" %>
</div>
 
